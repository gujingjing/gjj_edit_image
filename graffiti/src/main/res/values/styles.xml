    <!--颜色-->
    <style name="color_image" >
        <item name="android:background">@drawable/color_selector</item>
        <item name="android:padding">@dimen/image_padding</item>
        <item name="android:layout_width">@dimen/color_image_width</item>
        <item name="android:layout_height">@dimen/color_image_width</item>
        <item name="android:layout_centerInParent">true</item>

    </style>

    <!--弹出框-->
    <style name="alertDialogView">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dark_60</item>//对话框背景颜色
        <item name="android:backgroundDimEnabled">true</item>//屏幕背景不变暗
    </style>

    <!--edit_style-->
    <style name="edit_style">
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@null</item>
    </style>
